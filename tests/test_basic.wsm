# اختبارات أساسية للغة وسام

# 1. اختبار المتغيرات
ليكن س = 10
ليكن ص = 20

# 2. اختبار العمليات الحسابية
ليكن مجموع = س + ص
ليكن فرق = ص - س
ليكن ضرب = س * ص
ليكن قسمة = ص / س

اكتب "المجموع: {مجموع}"
اكتب "الفرق: {فرق}"
اكتب "الضرب: {ضرب}"
اكتب "القسمة: {قسمة}"

# 3. اختبار الشروط
إذا س < ص إذن
    اكتب "س أصغر من ص"
انتهى

# 4. اختبار الحلقات
اكتب "الأعداد من 1 إلى 5:"
لكل عدد من 1 إلى 5
    اكتب "عدد: {عدد}"
انتهى

# 5. اختبار الدوال
dالة تربيع تأخذ رقم
    أعد رقم * رقم
انتهى

ليكن نتيجة = تربيع 5
اكتب "5 تربيع = {نتيجة}"

# 6. اختبار المصفوفات
ليكن أرقام = [1، 2، 3، 4، 5]
اكتب "العنصر الأول: {أرقام[0]}"

