# مثال: برنامج مرحبا بالعالم
# هذا أول برنامج في لغة وسام

ليكن اسم = "عالم"

اكتب "مرحباً يا {اسم}!"

# استخدام المتغيرات
ليكن عمر = 25
ليكن مدينة = "الرياض"

اكتب "عمري {عمر} سنة وأعيش في {مدينة}"

# العمليات الحسابية
ليكن أ = 10
ليكن ب = 5

اكتب "{أ} + {ب} = {أ + ب}"
اكتب "{أ} - {ب} = {أ - ب}"
اكتب "{أ} * {ب} = {أ * ب}"
اكتب "{أ} / {ب} = {أ / ب}"
