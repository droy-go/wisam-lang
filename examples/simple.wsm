# برنامج بسيط بلغة وسام

ليكن اسم = "وسام"
ثابت إصدار = 1.0

اكتب "مرحبا بك في {اسم}"
اكتب "الإصدار: {إصدار}"

ليكن رقم = 10

إذا رقم > 5 إذن
    اكتب "الرقم أكبر من خمسة"
وإلا
    اكتب "الرقم صغير"
انتهى

لكل عدد من 1 إلى 3
    اكتب "عدد: {عدد}"
انتهى

دالة جمع تأخذ أ و ب
    أعد أ + ب
انتهى

ليكن نتيجة = جمع(5 ، 7)
اكتب "نتيجة الجمع: {نتيجة}"

اكتب "انتهى البرنامج!"
